generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  password String

  questions Question[]

  @@map("users") // esse ser√° o nome da tabela
}

model Question {
  id        String    @id @default(uuid())
  title     String
  slug      String    @unique
  content   String
  createdAt DateTime  @default(now()) @map("created_at") // renomeando a coluna
  updatedAt DateTime? @updatedAt @map("updated_at")
  authorId  String    @map("author_id")

  author User @relation(fields: [authorId], references: [id])

  @@map("questions")
}
